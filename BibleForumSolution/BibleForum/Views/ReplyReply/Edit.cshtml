@model BibleForum.Models.ReplyReply.PostReplyReplyEditModel

@{
    ViewData["Title"] = "Edit Reply";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading noBorder">
            Edit Reply
            <div class="forumLogo" style="background-image:url(@Model.AuthorImageUrl);background-size: 100%;"></div>
            <span id="headingBtn">
                <a asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId" class="btn btn-back">Back to Post</a>
            </span>
        </div>
    </div>
    <div class="row createPostSection">
        <div class="row">
            <div id="createReply">
                <div class="authorBlock">
                    You're editing this Reply as <strong>@Model.AuthorName</strong>
                </div>

                <form asp-action="AddEditContent" method="post" id="addPostForm">
                    <div class="form-group">
                        <label asp-for="ReplyContent">Reply:</label>
                        <textarea asp-for="ReplyContent" rows="12" class="form-control" placeholder="@Model.ReplyContent"></textarea>
                        <span asp-validation-for="ReplyContent" class="text-danger"></span>
                    </div>
                    <button type="submit" id="submitReplyBtn" class="btn btn-submitPost">Submit Edit</button>
                    <input asp-for="AuthorId" type="hidden" />
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="PostId" type="hidden" />
                    <input asp-for="PostReplyId" type="hidden" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


