@model BibleForum.Models.Post.PostIndexModel
@inject UserManager<BibleForum.Data.Models.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            <span class="postIndexTitle">
                @Model.Title
            </span>
        </div>
        <div class="forumLogo" style="background-image:url(@Model.ForumImage);background-size: 100%;"></div>
        <span id="headingBtn">
            <a asp-controller="Forum" asp-action="Topic" asp-route-id="@Model.ForumId" class="btn btn-back">Back to @Model.ForumName</a>
        </span>
    </div>

    <div class="row" id="postIndexContent">
        <div class="col-md-3 postAuthorContainer">
            <div class="postAuthorImage" style="background-image: url(@Model.AuthorImageUrl);"></div>
            <a asp-controller="Profile" asp-action="Detail" asp-route-id="@Model.AuthorId">
                @Model.AuthorName
            </a>
            <span class="postDate">@Model.Created</span>
            @if (Model.IsAuthorAdmin)
            {
                <div class="isAdmin smaller">Admin</div>
            }
        </div>
        <div class="col-md-9 postContentContainer">

            <div class="postContent" style="white-space: pre-line">
                @Html.Raw(Model.PostContent)
            </div>
        </div>
    </div>

    <div class="row" id="replyDivider"></div>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row" id="postReplyRow">
            <span>
                <a asp-controller="Reply" asp-action="Create" asp-route-id="@Model.Id" class="btn btn-newReply">
                    <span class=""></span> Reply
                </a>
            </span>
        </div>
    }

    <div class="page-header">
        <h3 class="reviews">Leave your comment</h3>
        <div class="logout">
            <button class="btn btn-default btn-circle text-uppercase" type="button" onclick="$('#logout').hide(); $('#login').show()">
                <span class="glyphicon glyphicon-off"></span> Logout
            </button>
        </div>
    </div>
    <div class="comment-tabs">
        <ul class="nav nav-tabs" role="tablist">
            <li class="active"><a href="#comments-logout" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Comments</h4></a></li>
            <li><a href="#add-comment" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Add comment</h4></a></li>
            <li><a href="#account-settings" role="tab" data-toggle="tab"><h4 class="reviews text-capitalize">Account settings</h4></a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="comments-logout">
                <ul class="media-list">
                    <li class="media">
                        @if (Model.Replies.Any())
                        {
                            foreach (var reply in Model.Replies)
                            {
                                <div class="pull-left postAuthorImage img-circle" style="background-image:url(@reply.AuthorImageUrl)"></div>
                                <div class="media-body">
                                    <div class="well well-lg">
                                        <h4 class="media-heading text-uppercase reviews">@reply.AuthorName </h4>
                                        @if (reply.IsEdited)
                                        {
                                            <div class="isEdited doubleLineBreak">
                                                <br />
                                                <p>(Edited - @reply.EditedCreatedDate)</p>
                                            </div>
                                        }
                                        @if (reply.IsAuthorAdmin)
                                        {
                                            <div class="isAdmin smaller">Admin</div>
                                            <br />
                                        }
                                        <ul class="media-date text-uppercase reviews list-inline">
                                            <li class="dd">@reply.Created.Day</li>
                                            <li class="mm">@reply.Created.Month</li>
                                            <li class="aaaa">@reply.Created.Year</li>
                                        </ul>
                                        <p class="media-comment" style="white-space: pre-line ">
                                            @Html.Raw(reply.ReplyContent)
                                        </p>
                                        @if (reply.PostReplySupportingBibleVerses.Any())
                                        {
                                            <div class="supportingBibleVerse">
                                                @foreach (var verse in reply.PostReplySupportingBibleVerses)
                                                {
                                                    <blockquote class="quote-box">
                                                        <p class="quotation-mark">
                                                            “
                                                        </p>
                                                        <p class="quote-text">
                                                            @verse.BibleVerse
                                                        </p>
                                                        <hr>
                                                        <div class="blog-post-actions">
                                                            <p class="blog-post-bottom pull-left">
                                                                @verse.BibleBook @verse.BibleChapter @verse.BibleTranslation
                                                            </p>
                                                            <p class="blog-post-bottom pull-right">
                                                                <span class="badge quote-badge">896</span>  ❤
                                                            </p>
                                                        </div>
                                                    </blockquote>
                                                }
                                            </div>
                                        }
                                        <a class="btn btn-info btn-circle text-uppercase" href="#" id="reply"><span class="glyphicon glyphicon-share-alt"></span> Reply</a>
                                        <a class="btn btn-warning btn-circle text-uppercase" data-toggle="collapse" href="#replyOne"><span class="glyphicon glyphicon-comment"></span> 2 comments</a>
                                    </div>
                                </div>
                            }
                        }
                        <div class="tab-pane" id="add-comment">
                            <form action="#" method="post" class="form-horizontal" id="commentForm" role="form">
                                <div class="form-group">
                                    <label for="email" class="col-sm-2 control-label">Comment</label>
                                    <div class="col-sm-10">
                                        <textarea class="form-control" name="addComment" id="addComment" rows="5"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="uploadMedia" class="col-sm-2 control-label">Upload media</label>
                                    <div class="col-sm-10">
                                        <div class="input-group">
                                            <div class="input-group-addon">http://</div>
                                            <input type="text" class="form-control" name="uploadMedia" id="uploadMedia">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button class="btn btn-success btn-circle text-uppercase" type="submit" id="submitComment"><span class="glyphicon glyphicon-send"></span> Summit comment</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

    </div>

    @if (Model.Replies.Any())
    {
        foreach (var reply in Model.Replies)
        {
            <div class="row replyContent">
                <div class="col-md-3 replyAuthorContainer">
                    <div class="postAuthorImage" style="background-image:url(@reply.AuthorImageUrl)"></div>
                    <a asp-controller="Profile" asp-action="Detail" asp-route-id="@reply.AuthorId">
                        @reply.AuthorName
                    </a>
                    <br />
                    @if (reply.IsAuthorAdmin)
                    {
                        <div class="isAdmin smaller">Admin</div>
                        <br />
                    }
                    <span class="postDate">@reply.Created</span>
                </div>
                <div class="col-md-9 replyContentContainer">
                    <div class="postContent" style="white-space: pre-line ">
                        @Html.Raw(reply.ReplyContent)
                    </div>
                    @if (reply.IsEdited)
                    {
                        <div class="isEdited doubleLineBreak">
                            <br />
                            <p>(Edited - @reply.EditedCreatedDate)</p>
                        </div>
                    }

                    @if (reply.AuthorId == UserManager.GetUserId(User))
                    {
                        <a asp-controller="SupportingVerse" asp-action="Create" asp-route-id="@reply.Id" class="btn btn-primary btn-sm">
                            <span class="glyphicon glyphicon-plus-sign"></span> Add a verse
                        </a>
                    }
                    @if (reply.AuthorId == @UserManager.GetUserId(User) || User.IsInRole("Admin"))
                    {
                        <div class="btn-group" role="group">
                            <a asp-controller="Reply" asp-action="Edit" asp-route-id="@reply.Id" class="btn btn-primary btn-sm">
                                <span class="glyphicon glyphicon-wrench"></span> Edit
                            </a>
                            <a asp-controller="Reply" asp-action="Delete" asp-route-id="@reply.Id" class="btn btn-danger btn-sm">
                                <span class="glyphicon glyphicon-trash"></span> Delete
                            </a>
                        </div>
                    }
                    <div class="vote">
                        <a asp-controller="Reply" asp-action="Vote" asp-route-id="@reply.Id" class="btn btn-success btn-sm">
                            <span class="glyphicon glyphicon-thumbs-up"></span> Like <span class="voteCount">(@reply.VoteCount)</span>
                        </a>
                    </div>
                    @if (reply.PostReplySupportingBibleVerses.Any())
                    {
                        <div class="supportingBibleVerse">
                            @foreach (var verse in reply.PostReplySupportingBibleVerses)
                            {
                                <blockquote class="quote-box">
                                    <p class="quotation-mark">
                                        “
                                    </p>
                                    <p class="quote-text">
                                        @verse.BibleVerse
                                    </p>
                                    <hr>
                                    <div class="blog-post-actions">
                                        <p class="blog-post-bottom pull-left">
                                            @verse.BibleBook @verse.BibleChapter @verse.BibleTranslation
                                        </p>
                                        <p class="blog-post-bottom pull-right">
                                            <span class="badge quote-badge">896</span>  ❤
                                        </p>
                                    </div>
                                </blockquote>
                            }
                        </div>
                    }
                </div>
            </div>
            <div class="row" id="replyDivider"></div>
        }
    }
    else
    {
        <div class="noPosts">
            <h3>
                There are no replies to this post
                <br />
            </h3>
        </div>
    }
</div>
