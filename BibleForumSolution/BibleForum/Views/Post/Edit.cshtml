@model BibleForum.Models.Post.PostEditModel

@{
    ViewData["Title"] = "Edit Post";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading noBorder">
            Edit Post  | @Model.ForumName
            <div class="forumLogo" style="background-image:url(@Model.ForumImageUrl);background-size: 100%;"></div>
            <span id="headingBtn">
                <a asp-controller="Post" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-back">Back to @Model.PostTitle</a>
            </span>
        </div>
    </div>
    <div class="row createPostSection">
        <div class="row">
            <div id="createReply">
                <div class="authorBlock">
                    You're editing this Post as <strong>@Model.AuthorName</strong>
                </div>

                <form asp-action="AddEditContent" method="post" id="addPostForm">
                    <div class="form-group">
                        <input asp-for="PostTitle" class="form-control" placeholder="@Model.PostTitle"/>
                        <span asp-validation-for="PostTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="PostContent" rows="10" class="form-control" placeholder="@Model.PostContent"></textarea>
                        <span asp-validation-for="PostContent" class="text-danger"></span>
                    </div>
                    <button type="submit" id="submitReplyBtn" class="btn btn-submitPost">Submit Edit</button>

                    <input asp-for="AuthorId" type="hidden" />
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="ForumId" type="hidden" />
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
