@model BibleForum.Models.ReplySupportingBibleVerse.PostReplySupportingBibleVerseModel

@{
    ViewData["Title"] = "Create";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Create New Forum
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">
            <div id="createForumSection">
                <form asp-action="AddSupportingVerse" method="post" id="createForumForm">
                    <div asp-validation-summary="All" class="text-danger">
                        <div class="form-group">
                            <label asp-for="BibleChapter">Bible Chapter</label>
                            <input asp-for="BibleChapter" class="form-control" placeholder="Choose forum title" />
                            <span asp-validation-for="BibleChapter" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BibleTranslation">Bible Translation</label>
                            <input asp-for="BibleTranslation" class="form-control" placeholder="Choose a bible translation" />
                            <span asp-validation-for="BibleTranslation" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BibleVerse">Bible Verse</label>
                            <textarea asp-for="BibleVerse" class="form-control" placeholder="Choose a bible translation"></textarea>
                            <span asp-validation-for="BibleVerse" class="text-danger"></span>
                        </div>
                        <button type="submit" id="newFormBtn" class="btn btn-submitPost">Create Forum</button>
                    </div>
                    <input asp-for="AuthorId" type="hidden" />
                    <input asp-for="PostId" type="hidden" />
                    <input asp-for="PostReplyId" type="hidden" />
                </form>
            </div>
        </div>
    </div>
</div>

