@model BibleForum.Models.Reply.PostReplyModel

@{
    ViewData["Title"] = "Create Reply";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Reply | @Model.PostTitle
        </div>
        <div class="forumLogo" style="background-image:url(@Model.ForumImageUrl)"></div>
        <span id="headingBtn">
            <a asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId" class="btn btn-back">
                Back to Post
            </a>
        </span>

    </div>
    <div class="row">
        <div id="postReply">
            <h3>
                @Model.PostTitle
            </h3>
            <p>
                @Model.PostContent
            </p>
        </div>
    </div>
    <div class="row">
        <div id="createReply">

        </div>
    </div>
</div>