@model BibleForum.Models.Forum.AddForumModel

@{
    ViewData["Title"] = "Create";
}

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            Create New Forum
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">
            <div id="createForumSection">
                <form asp-action="AddForum" method="post" id="createForumForm" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger">
                        <div class="form-group">
                            <label asp-for="Title">Forum Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Choose forum title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Forum Description</label>
                            <textarea asp-for="Description" class="form-control" row="15" placeholder="Write a description of the forum topic..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BookOrder">Forum Description</label>
                            <input asp-for="BookOrder" class="form-control" row="2" placeholder="" />
                            <span asp-validation-for="BookOrder" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OldOrNew">Forum Description</label>
                            <input asp-for="OldOrNew" class="form-control" row="2" placeholder="" />
                            <span asp-validation-for="OldOrNew" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="OldOrNew">Forum Description</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>Old</option>
                                <option>New</option>
                            </select>
                        </div>
                        <div id="upload">
                            <label>Upload Forum Image</label>
                            <br />
                            <label class="btn btn-default btn-file">
                                Browse <input asp-for="ImageUpload" typeof="file" style="display:none" />
                            </label>
                        </div>
                        <button type="submit" id="newFormBtn" class="btn btn-submitPost">Create Forum</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>