@model BibleForum.Models.Forum.ForumTopicModel

@{
    ViewData["Title"] = "Topic";
}

<h2>Welcome to @Model.Forum.Title Forum!</h2>
<h6>@Model.Forum.Description</h6>

<div class="clearfix">
    <span>
        <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id" class="btn btn-default">
            Create Post
        </a>
    </span>
</div>

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach(var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                            @post.Title
                        </a>
                    </td>
                    <td>@post.AuthorName</td>
                    <td>@post.DatePosted</td>
                    <td>@post.RepliesCount</td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div>
        <h3>
            Looks like there is no post yet. Why not 
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
                <span>create</span>
            </a>
            one?
        </h3>
    </div>
}

